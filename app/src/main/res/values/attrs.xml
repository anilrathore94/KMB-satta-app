<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="CustomTextView">
        <attr name="fonttest" format="string" />
    </declare-styleable>


    <declare-styleable name="CustomEditTextView">
        <attr name="editfont" format="string" />
    </declare-styleable>
    <declare-styleable name="RainbowTextView">
        <attr name="colorSpeed" format="dimension" />
        <attr name="colorSpace" format="dimension" />
    </declare-styleable>
    <declare-styleable name="VimeoPlayerView">
        <attr name="autoPlay" format="boolean" />
        <attr name="loop" format="boolean" />
        <attr name="muted" format="boolean" />
        <attr name="topicColor" format="color" />
        <attr name="backgroundColor" format="color" />
        <attr name="showOriginalControls" format="boolean" />
        <attr name="showTitle" format="boolean" />
        <attr name="showMenuOption" format="boolean" />
        <attr name="showFullscreenOption" format="boolean" />
        <attr name="aspectRatio" format="float" />
        <attr name="quality" format="string" />
    </declare-styleable>
    <declare-styleable name="SearchableSpinner">
        <attr name="hintText" format="string" />
    </declare-styleable>

    <declare-styleable name="ExTextView">
        <attr name="text" format="reference|string" />
        <attr name="expand_label" format="reference|string" />
        <attr name="collapse_label" format="reference|string" />
        <attr name="limit" format="integer" />
    </declare-styleable>
    <declare-styleable name="MaterialDialog">
        <attr name="material_dialog_background" format="color|reference" />

        <attr name="material_dialog_title_text_color" format="color|reference" />
        <attr name="material_dialog_message_text_color" format="color|reference" />

        <attr name="material_dialog_positive_button_text_color" format="color|reference" />
        <attr name="material_dialog_positive_button_color" format="color|reference" />

        <attr name="material_dialog_negative_button_text_color" format="color|reference" />
    </declare-styleable>

    <declare-styleable name="PinLockView">
        <attr name="pinLength" format="integer" />
        <attr name="keypadTextColor" format="color" />
        <attr name="keypadTextSize" format="dimension" />
        <attr name="keypadButtonSize" format="dimension" />
        <attr name="keypadVerticalSpacing" format="dimension" />
        <attr name="keypadHorizontalSpacing" format="dimension" />
        <attr name="keypadButtonBackgroundDrawable" format="integer" />
        <attr name="keypadDeleteButtonDrawable" format="integer" />
        <attr name="keypadDeleteButtonSize" format="dimension" />
        <attr name="keypadShowDeleteButton" format="boolean" />
        <attr name="keypadDeleteButtonPressedColor" format="color" />

        <attr name="dotEmptyBackground" format="reference" />
        <attr name="dotFilledBackground" format="reference" />
        <attr name="dotDiameter" format="dimension" />
        <attr name="dotSpacing" format="dimension" />
        <attr name="indicatorType" format="enum">
            <enum name="fixed" value="0" />
            <enum name="fill" value="1" />
            <enum name="fillWithAnimation" value="2" />
        </attr>

    </declare-styleable>
</resources>
