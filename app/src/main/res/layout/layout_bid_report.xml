<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="6dp"
    android:background="@drawable/item_border_aaaaa"
    android:orientation="horizontal"
    android:paddingTop="@dimen/_8dp"
    android:paddingBottom="@dimen/_8dp"
    android:weightSum="1">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.6"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvTopic"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:paddingLeft="8dp"
            android:text="TIME BAZAR(Single Digit)"
            android:textColor="#000000"
            android:textSize="15dp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/tvDivision"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="4dp"
            android:fontFamily="@font/sss"
            android:gravity="center_vertical"
            android:paddingLeft="8dp"
            android:text="Subject : IIT JEE"
            android:textColor="#000000"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/tvDivision1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="4dp"
            android:fontFamily="@font/sss"
            android:gravity="center_vertical"
            android:paddingLeft="8dp"
            android:text="Subject : IIT JEE"
            android:textColor="#000000"
            android:textSize="12dp" />


        <TextView
            android:id="@+id/tvDivision11"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="4dp"
            android:fontFamily="@font/sss"
            android:gravity="center_vertical"
            android:paddingLeft="8dp"
            android:text="Subject : IIT JEE"
            android:textColor="#000000"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/tvDivision21"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="4dp"
            android:fontFamily="@font/sss"
            android:gravity="center_vertical"
            android:paddingLeft="8dp"
            android:text="Subject : IIT JEE"
            android:textColor="#000000"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/tvDate"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="4dp"
            android:gravity="center_vertical"
            android:paddingLeft="8dp"
            android:text="Division : IIT JEE"
            android:textColor="#000000"
            android:textSize="15dp" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"

        android:layout_weight="0.4"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvSession"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="2dp"
            android:fontFamily="@font/sss"
            android:gravity="center_vertical"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:text="Session : Open"
            android:textColor="#000000"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/tvPoint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:fontFamily="@font/sss"
            android:gravity="center_vertical"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:text="11 PTS."
            android:textColor="#004A44"
            android:textSize="18dp" />


    </LinearLayout>

</LinearLayout>
