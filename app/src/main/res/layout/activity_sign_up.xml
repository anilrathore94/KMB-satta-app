<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    android:focusableInTouchMode="true"
    android:orientation="vertical"
    android:paddingLeft="20dp"
    android:paddingRight="20dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusableInTouchMode="true"
        android:gravity="center_horizontal"
        android:orientation="vertical">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginTop="16dp"
            android:text="Helpline : +91-80031-74078"
            android:textColor="#FF0000"
            android:textSize="20dp"
            android:textStyle="bold" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginTop="40dp"
            android:text="Welcome to"
            android:textColor="#000"
            android:textSize="26dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text="KMB Kalyan"
            android:textColor="#000"
            android:layout_marginTop="10dp"
            android:textSize="28dp"
            android:textStyle="bold"></TextView>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <EditText
                android:id="@+id/SignUpFullName"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/item_borderaa"
                android:gravity="center|left"
                android:hint="Enter Name"
                android:inputType="text"
                android:maxLines="1"
                android:paddingLeft="16dp"
                android:textColor="#000"
                android:textColorHint="#000"
                android:drawableTint="@color/black"
                android:paddingRight="12dp"
                android:drawableRight="@drawable/user"
                android:textSize="20dp" />



            <EditText
                android:id="@+id/LoginPhoneNumber"
                android:layout_marginTop="16dp"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/item_borderaa"
                android:gravity="center|left"
                android:hint="Enter Mobile Number"
                android:inputType="phone"
                android:maxLength="10"
                android:maxLines="1"
                android:paddingLeft="16dp"
                android:textColor="#000"
                android:textColorHint="#000"
                android:drawableTint="@color/black"
                android:paddingRight="12dp"
                android:drawableRight="@drawable/phh"
                android:textSize="20dp" />



            <EditText
                android:id="@+id/signUpEmail"
                android:layout_marginTop="16dp"

                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/item_borderaa"
                android:gravity="center|left"
                android:hint="Enter Email Id (Optional)"
                android:inputType="textEmailAddress"
                android:maxLines="1"
                android:paddingLeft="16dp"
                android:textColor="#000"
                android:textColorHint="#000"
                android:drawableTint="@color/black"
                android:paddingRight="12dp"
                android:drawableRight="@drawable/user"
                android:textSize="20dp" />




            <EditText
                android:id="@+id/SignUpPassword"
                android:layout_width="match_parent"
                android:layout_marginTop="16dp"

                android:layout_height="50dp"
                android:background="@drawable/item_borderaa"
                android:gravity="center|left"
                android:hint="Password"
                android:inputType="textPassword"
                android:maxLines="1"
                android:paddingLeft="16dp"
                android:textColor="#000"
                android:textColorHint="#000"
                android:drawableTint="@color/black"
                android:paddingRight="12dp"
                android:drawableRight="@drawable/pass"
                android:textSize="20dp" />


        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_marginTop="20dp"
            android:gravity="center_horizontal"
            android:layout_height="wrap_content"
            android:onClick="@{(view)->click.onTermTextClick()}"
            android:text="@string/TermsAndConditionR"
            android:textColor="@android:color/black"
            android:textSize="16dp" />


        <TextView
            android:id="@+id/SignUp1"
            android:layout_width="200dp"
            android:layout_height="45dp"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="12dp"
            android:layout_marginRight="12dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/reg_bg_l3og"
            android:gravity="center"
            android:text="SignUp"
            android:textColor="#FFF"
            android:textSize="20dp"
            android:textStyle="bold"

            />




    </LinearLayout>

    <TextView
        android:id="@+id/Login1"
        style="@style/parent"
        android:layout_marginTop="16dp"
        android:text="@string/Login"
        android:textAlignment="center"
        android:textColor="#000"
        android:textSize="20sp" />


</LinearLayout>